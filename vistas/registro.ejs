<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" href="/scripts/css/registro.css">
    <link rel="icon" href="/scripts/images/keyboard.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/scripts/images/keyboard.ico" type="image/x-icon">
</head>
<body>
    <canvas id="canvas" style="background: #111;"></canvas>
    <div class="divLogo">
        <div class="registroLogo">
            SIGN UP
            <span></span>
        </div>
    </div>
    <div class="registro">
        <a class="back" href="/"><-------</a>
        <form action="/registro" method="POST" id="formulario">
            <input type="text" name="username" id="username" placeholder="USERNAME" class="inputs">
            <div class="invalidDiv" id="invalidUsername">
                <p class="invalid">8 o mas caracteres, mayusculas, minusculas, numeros y guiones</p>
            </div>
            <input type="text" name="email" id="email" placeholder="EMAIL" class="inputs">
            <div class="invalidDiv" id="invalidEmail">
                <p class="invalid">Ingresa un email valido</i></p>
            </div>
            <input type="password" name="password" id="password" placeholder="PASSWORD" class="inputs">
            <div class="invalidDiv" id="invalidPassword">
                <p class="invalid">8 o mas caracteres, una mayuscula, una minuscula, un numero y un simbolo</p>
            </div>
            <input type="password" name="passwordConfirm" id="passwordConfirm" placeholder="CONFIRM PASSWORD" class="inputs">
            <div class="invalidDiv" id="invalidConfirmPassword">
                <p class="invalid">Las contrase√±as deben coincidir</p>
            </div>
            <div class="submits">
                <input type="submit" value="SIGN UP" class="inputSignup">
            </div>
        </form>
    </div>
    <% if (typeof Validaciones !== 'undefined' && Validaciones.length > 0) { %>
        <div class="contenedor-toast" id="contenedor-toast">
            <div class="toast auto-cierre" id="toast">
                <div class="contenido">
                    <div class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1z"/>
                            <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                        </svg>
                    </div>
                    <div class="texto">
                        <p class="titulo"> <%= Validaciones[0].msg %> </p>
                    </div>
                </div>
                <button class="btn-cerrar">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>
    <script src="/scripts/login.js"></script>
    <script src="/scripts/validaciones.js"></script>
</body>
</html>